<appwidget-provider xmlns:android="http://schemas.android.com/apk/res/android"
    android:initialKeyguardLayout="@layout/to_do_list_widget"
    android:initialLayout="@layout/to_do_list_widget"
    android:minHeight="60dp"
    android:minWidth="180dp"
    android:previewImage="@drawable/ic_icon_square_widget_preview"
    android:resizeMode="horizontal|vertical"
    android:updatePeriodMillis="86400000"
    android:widgetCategory="home_screen"
    android:configure="com.korbi.todolist.ui.ChooseWidgetCategory"/>
    <!-- last line sets the activity configure activity, that lets you choose the category
    the widget should display that is launched when the widget is placed on home !-->